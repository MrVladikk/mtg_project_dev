{% extends "mtg_app/base.html" %}

{% block title %}Регистрация — MTG Коллекция{% endblock %}

{% block content %}
<section class="container">
  <h2>Регистрация</h2>

  {% if form.non_field_errors %}
    <div class="alert alert-error">{{ form.non_field_errors }}</div>
  {% endif %}

  <form method="post" class="card form mt-3" novalidate>
    {% csrf_token %}

    {# Если используешь UserCreationForm — поля: username, password1, password2 #}
    {% for field in form %}
      <div class="form-row">
        <label for="{{ field.id_for_label }}">{{ field.label }}</label>
        {{ field }}
        {% if field.help_text %}
          <div class="muted">{{ field.help_text|safe }}</div>
        {% endif %}
        {% if field.errors %}
          <div class="field-error">{{ field.errors|join:", " }}</div>
        {% endif %}
      </div>
    {% endfor %}

    <div class="form-actions">
      <button class="btn btn-primary" type="submit">Зарегистрироваться</button>
      <a class="btn" href="{% url 'login' %}">У меня уже есть аккаунт</a>
      <a class="btn" href="{% url 'mtg_app:home' %}">Отмена</a>
    </div>
  </form>
</section>
{% endblock %}
